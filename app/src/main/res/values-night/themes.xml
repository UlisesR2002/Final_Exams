<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FinalExams" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FinalExamsTitlesTexts">
        <item name="android:textColor">@color/colorTextTile</item>
        <item name="android:textSize">100sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/whatever_it_takes</item>
    </style>

    <style name="FinalExamsNumberQuestionsTexts">
        <item name="android:textColor">@color/colorTextTile</item>
        <item name="android:textSize">40sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/whatever_it_takes</item>
    </style>

    <style name="FinalExamsBodyQuestionsTexts">
        <item name="android:textColor">@color/colorTextTile</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/whatever_it_takes</item>
    </style>

    <style name="FinalExamsButton">
        <item name="android:textColor">@drawable/button_text_color</item>
        <item name="android:textSize">50sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/whatever_it_takes</item>
    </style>

    <style name="FinalExamsTabButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/colorTabButtonBackground</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:bottomLeftRadius">0dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/whatever_it_takes</item>
    </style>

    <style name="FinalExamsAnswerButton">
        <item name="android:textColor">@drawable/button_text_color</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">left</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/whatever_it_takes</item>
    </style>

    <style name="Theme.FinalExams" parent="Base.Theme.FinalExams" />
</resources>